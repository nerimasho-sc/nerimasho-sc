---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class:list={["bg-white p-6 rounded-lg shadow-lg border-t-4 border-club-yellow hover:shadow-xl transition-shadow", className]}>
  {title && <h3 class="text-xl font-bold mb-4 text-club-blue">{title}</h3>}
  <div class="text-gray-600 leading-relaxed">
    <slot />
  </div>
</div>
